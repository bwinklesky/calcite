{
  "compileOnSave": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "lib": [ "ES2022", "DOM" ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [ "ClientApp" ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
